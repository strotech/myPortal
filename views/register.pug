extends layout

block content
    h5 Register here!!
    form(method='POST',action='/register')
        #form-group
            label Name:
            input.form-control(name='name',type='text')
        #form-group
            label Email:
            input.form-control(name='email',type='text')
        #form-group
            label Username:
            input.form-control(name='username',type='text')
        #form-group
            label Password:
            input.form-control(name='password',type='password')
        #form-group
            label Confirm password:
            input.form-control(name='cpassword',type='password')
        br
        input.btn.btn-primary(type='submit',value='Sign Up')
